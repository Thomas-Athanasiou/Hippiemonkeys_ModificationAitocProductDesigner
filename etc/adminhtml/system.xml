<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <section id="hippiemonkeys_modification">
            <group id="aitoccustomproductdesigner" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1">
                <label>Aitoc Custom Product Designer</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="productoptionssave_active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Producto Options Save Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="renderproduct_active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Render Product Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="renderproduct_attribute_code" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Active Product Attribute Code</label>
                </field>
            </group>
        </section>
    </system>
</config>